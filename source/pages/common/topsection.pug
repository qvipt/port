section.section.hero
    .hero_bg
      img.hero_bg-img(src=require('../img/forest.png'))
    .hero__title
      .hero__title-block
        img.hero__title-img(src=require('../about/img/portfolio_header.png'))
    .user.hero__user
      .user__block
        .user__pic
        img.user__pic-img(src=require("../img/ava.png"), alt="")
        .user__description
        .user__name Петя Отверткин
        .user__info Личный сайт разработчика
    .hero__socials      
        ul.socials
          each item in ['vk', 'in', 'github']
            li.socials__item
              a(href="" class="socials__item--link")
                svg(class=`social__item-pic socials__item-pic--${item}`)
                  use(xlink:href=require(`../img/sprite/${item}.svg`).url)             
    .humburger.hero__hamburger &#9776
    .arrow-down.hero__scroll-btn
    .triangle
      .triangle__wrapper 
        .triangle__item
          svg.svg-triangle.svg-triangle-left(viewBox="0 0 200 100" preserveAspectRatio="none")
            polygon(points="0, 0 200, 100 0, 100")
        .triangle__item
          svg.svg-triangle.svg-triangle-right(viewBox="0 0 200 100" preserveAspectRatio="none")
            polygon(points="0, 100 200, 0 200, 100")    